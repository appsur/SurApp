<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/ibProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvName"
        android:layout_marginStart="29dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightGray"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="99dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:linksClickable="true"
                android:text="SETTINGS"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibMenu"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/menu_icon" />

            <ImageView
                android:id="@+id/ibSettings"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/dots_vertical" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnDaily"
        android:layout_marginTop="99dp"
        android:text="NAME: "
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/ibAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_marginTop="224dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bell_outline"
        android:tint="@color/coral"
        android:onClick="onAlert"/>

    <TextView
        android:id="@+id/tvOnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibProfileImage"
        android:layout_alignTop="@+id/ibAlert"
        android:text="ON ALERT"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/ibCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_marginBottom="225dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/compass_outline"
        android:tint="@color/coral"
        android:onClick="onCompass"/>

    <ImageButton
        android:id="@+id/ibLocator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_vector_location_stroke"
        android:tint="@color/coral"
        android:onClick="onLocator"/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvOnAlert"
        android:layout_centerVertical="true"
        android:text="TRACK ME"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvFindMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvOnAlert"
        android:layout_alignTop="@+id/ibCompass"
        android:text="SOUND ALARM"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvOnAlert"
        android:layout_alignTop="@+id/ibClock"
        android:text="CHECK IN FREQUENCY: "
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnDaily"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btnWeekly"
        android:layout_centerHorizontal="true"
        android:background="@color/lightGray"
        android:text="DAILY"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        android:onClick="onDaily"/>

    <Button
        android:id="@+id/btnWeekly"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnHourly"
        android:layout_marginEnd="30dp"
        android:background="@color/lightGray"
        android:text="WEEKLY"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        android:onClick="onWeekly"/>

    <Button
        android:id="@+id/btnHourly"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_marginBottom="135dp"
        android:background="@color/lightGray"
        android:text="HOURLY"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        android:onClick="onHourly"/>

    <TextView
        android:id="@+id/tvCheckinFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnWeekly"
        android:layout_alignTop="@+id/tvFrequency"
        android:text="Every Hour"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/ibClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_marginBottom="179dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/clock_outline"
        android:tint="@color/coral"
        android:onClick="onClock"/>

    <ImageButton
        android:id="@+id/ibEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@android:color/transparent"
        android:tint="@color/coral"
        app:srcCompat="@drawable/account_edit"
        android:onClick="onEdit"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        android:background="@color/lightGray"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>


    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPhoneNumber"
        android:layout_alignStart="@+id/btnDaily"
        android:layout_marginBottom="-146dp"
        android:text="USERNAME: "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvUsernameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvUsername"
        android:layout_toEndOf="@+id/tvUsername"
        android:text="johndoe99"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnDaily"
        android:layout_marginTop="153dp"
        android:text="PHONE: "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvName"
        android:layout_toEndOf="@id/tvName"
        android:text="John Doe"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvPhoneValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvPhoneNumber"
        android:layout_toEndOf="@+id/tvPhoneNumber"
        android:text="(555) 555-5555"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_toEndOf="@+id/tvPhoneNumber"
        android:hint="Enter name"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_toEndOf="@+id/tvUsername"
        android:hint="Enter username"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername"
        android:layout_marginTop="145dp"
        android:layout_toEndOf="@+id/tvPhoneNumber"
        android:hint="XXXXXXXXXX"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="50dp"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/ibProfileImage"
        android:layout_alignEnd="@+id/ibEdit"
        android:background="@color/teal"
        android:text="Done"
        android:visibility="invisible"
        android:onClick="onDone"/>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibEdit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73dp"
        android:background="@color/lightGray"
        android:text="Log Out"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="426dp" />

</RelativeLayout>