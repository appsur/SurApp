<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="71dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/account"
        app:border_color="@color/gray" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPhoneNumber"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="@font/arimo"
        android:text="NAME"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="@font/arimo"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:text="PHONE NUMBER"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvTimeElapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvTime"
        android:layout_alignTop="@+id/tvName"
        android:fontFamily="@font/arimo"
        android:text="TIME TO CHECK-IN:"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivTimerGoing"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/arimo"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="TIME"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/rectangle_shape" />

    <ImageView
        android:id="@+id/ivTimerGoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_alignStart="@+id/ivTimerEmpty"
        android:paddingBottom="5dp"
        android:tint="@color/teal"
        app:srcCompat="@drawable/timer_sand" />

    <ImageView
        android:id="@+id/ivTimerEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="112dp"
        android:paddingBottom="5dp"
        android:tint="@color/coral"
        app:srcCompat="@drawable/timer_sand_empty" />

</RelativeLayout>