<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotlineActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvSuicidePrevention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="70dp"
        android:text="Suicide Prevention Hotline "
        android:textColor="@color/black"
        android:onClick="onSuicidePrevention"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightGray"
        app:titleTextColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/toolbar_title"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:linksClickable="true"
                android:text="HOTLINES"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibSettings"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/pbLoading"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:background="@android:color/transparent"
                android:onClick="onSettings"
                app:srcCompat="@drawable/dots_vertical" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/logo3" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/lightGray"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu" />

    <TextView
        android:id="@+id/tvBWC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_marginTop="209dp"
        android:text="Battered Women and Children Hotline: 1-800-603-HELP"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvElderlyAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBWC"
        android:layout_marginTop="256dp"
        android:text="Elder Abuse Hotline: "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvDrugAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBWC"
        android:layout_marginTop="300dp"
        android:text="Drug Abuse National Hotline"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvChildAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBWC"
        android:layout_marginTop="351dp"
        android:text="Child Abuse Hotline/Social Services"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvAlcoholics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvBWC"
        android:layout_marginBottom="333dp"
        android:text="Alcohol Treatment Referal Hotline: "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvDomesticAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBWC"
        android:layout_marginTop="113dp"
        android:text="National Domestic Abuse Hotline"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvDomesticAbuseSpanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBWC"
        android:layout_marginTop="160dp"
        android:text="National Domestic Abuse Hotline (Spanish): 1-800-942-6908"
        android:textColor="@color/black" />


</RelativeLayout>