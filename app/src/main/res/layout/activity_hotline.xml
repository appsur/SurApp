<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotlineActivity"
    android:background="@color/white">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvSuicidePrevention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="93dp"
        android:onClick="onSuicidePrevention"
        android:text="Suicide Prevention Hotline "
        android:textColor="@color/black"
        android:textSize="22sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightGray"
        app:titleTextColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/toolbar_title"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:linksClickable="true"
                android:text="HOTLINES"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibSettings"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/pbLoading"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:background="@android:color/transparent"
                android:onClick="onSettings"
                app:srcCompat="@drawable/dots_vertical" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/logo3" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation_hotline"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightGray"
                app:itemIconTint="@color/black"
                app:itemTextColor="@color/black"
                app:menu="@menu/menu" />

    <TextView
        android:id="@+id/tvBWC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvDomesticAbuseSpanish"
        android:layout_marginTop="30dp"
        android:onClick="onBatteredWomenAndChildren"
        android:text="Battered Women and Children Hotline"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvElderlyAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvChildAbuse"
        android:layout_marginTop="30dp"
        android:onClick="onElderAbuse"
        android:text="Elder Abuse Hotline"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvDrugAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvAlcoholics"
        android:layout_marginTop="30dp"
        android:onClick="onDrugs"
        android:text="Drug Abuse National Hotline"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvChildAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvBWC"
        android:layout_marginTop="30dp"
        android:onClick="onSS"
        android:text="Child Abuse Hotline/Social Services"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvAlcoholics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvElderlyAbuse"
        android:layout_marginTop="30dp"
        android:onClick="onAlcoholics"
        android:text="Alcohol Treatment Referal Hotline"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvDomesticAbuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvSuicidePrevention"
        android:layout_marginTop="30dp"
        android:onClick="onDomesticAbuse"
        android:text="National Domestic Abuse Hotline"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvDomesticAbuseSpanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSuicidePrevention"
        android:layout_below="@+id/tvDomesticAbuse"
        android:layout_marginTop="30dp"
        android:onClick="onDomesticAbuseSpanish"
        android:text="National Domestic Abuse Hotline (Spanish)"
        android:textColor="@color/black"
        android:textSize="22sp" />

        </RelativeLayout>
        <!-- The navigation drawer -->
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:id="@+id/drawerPane"
            android:background="@color/coral"
            android:layout_gravity="start">
            <!-- List of Actions (pages) -->
            <ListView
                android:id="@+id/navList"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:background="@color/coral" />
        </RelativeLayout>




    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>