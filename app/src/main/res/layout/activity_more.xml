<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/ibCheckin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map"
        android:layout_marginStart="39dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/check_outline" />

    <ImageButton
        android:id="@+id/ibAlert"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/reminder_text"
        android:layout_alignEnd="@+id/tvPhone"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bell_outline" />

    <ImageButton
        android:id="@+id/ibPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ibCheckin"
        android:layout_below="@+id/reminder_text"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/phone" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvPhone"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/ibPhone"
        android:layout_toEndOf="@+id/ibPhone"

        android:ems="10"
        android:hint="message"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray" />

    <ImageButton
        android:id="@+id/ibSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etMessage"
        android:layout_toStartOf="@+id/etMessage"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/message" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ibPhone"
        android:layout_toEndOf="@+id/ibCheckin"
        android:text="phone number here"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/reminder_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibCheckin"
        android:layout_marginStart="23dp"
        android:gravity="center"
        android:text="Check-in Reminder"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/alarm_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibAlert"
        android:layout_alignStart="@+id/ibAlert"
        android:layout_below="@+id/ibAlert"
        android:gravity="center"
        android:text="Alarm"
        android:textColor="@color/black" />

</RelativeLayout>