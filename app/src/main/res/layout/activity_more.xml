<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lightGray"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="99dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:linksClickable="true"
                android:text="(Friend's Name)"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibMenu"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/menu_icon" />

            <ImageView
                android:id="@+id/ibSettings"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/dots_vertical" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar" />

    <ImageButton
        android:id="@+id/ibCheckin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/reminder_text"
        android:layout_below="@+id/map"
        android:layout_marginStart="14dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/check_outline" />

    <ImageButton
        android:id="@+id/ibAlert"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/tvPhone"
        android:layout_below="@+id/map"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bell_outline" />

    <ImageButton
        android:id="@+id/ibPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reminder_text"
        android:layout_below="@+id/reminder_text"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/phone" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvPhone"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ibPhone"
        android:layout_toEndOf="@+id/ibPhone"

        android:ems="10"
        android:hint="message"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray" />

    <ImageButton
        android:id="@+id/ibSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etMessage"
        android:layout_toStartOf="@+id/etMessage"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/message" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ibPhone"
        android:layout_toEndOf="@+id/ibCheckin"
        android:text="phone number here"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/reminder_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibCheckin"
        android:layout_marginStart="87dp"
        android:gravity="center"
        android:text="Check-in Reminder"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/alarm_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibAlert"
        android:layout_alignStart="@+id/ibAlert"
        android:layout_below="@+id/ibAlert"
        android:gravity="center"
        android:text="Alarm"
        android:textColor="@color/black" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        android:background="@color/lightGray"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>

</RelativeLayout>